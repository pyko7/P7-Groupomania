// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  createdAt      DateTime  @default(now())
  firstName      String    @db.VarChar(50)
  lastName       String    @db.VarChar(50)
  email          String    @unique @db.VarChar(100)
  password       String
  profilePicture String
  role           Int       @db.TinyInt
  city           String?   @db.VarChar(50)
  writtenPosts   Post[]    @relation("WrittenPosts")
  sharedPost     Post?     @relation("SharedPost")
  comments       Comment[]
}

model Post {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  textContent String    @db.VarChar(280)
  imageUrl    String?
  author      User      @relation("WrittenPosts", fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorId    Int
  sharedBy    User?     @relation(name: "SharedPost", fields: [sharedById], references: [id], onDelete: Cascade, onUpdate: Cascade)
  sharedById  Int?      @unique
  comments    Comment[]
}

model Comment {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  textContent String   @db.VarChar(280)
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorId    Int
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId      Int
}
